@model Slider
@{
    ViewData["Title"] = "Create";
}


<form method="post" enctype="multipart/form-data">
    <div>
        <label class="mb-3">Slider title:</label><br />
        <input asp-for="Title" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div>
        <label class="mb-3">Slider subtitle:</label><br />
        <input asp-for="SubTitle" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="SubTitle"></span>
    </div>
    <div>
        <label class="mb-3">Slider discount:</label><br />
        <input asp-for="Discount" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Discount"></span>
    </div>
    <div>
        <label class="mb-3">Slider discover url:</label><br />
        <input asp-for="DiscoverUrl" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="DiscoverUrl"></span>
    </div>
    <div>
        <label class="mb-3">Slider order:</label><br />
        <input asp-for="Order" class="form-control" /><br />
        <span class="text-danger" asp-validation-for="Order"></span>
    </div>
    <div>
        <label class="mb-3">Slider image:</label><br />
        <input asp-for="Photo" class="form-control" accept="image/*" /><br />
        <span class="text-danger" asp-validation-for="Photo"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create slider</button>
    </div>
</form>

